        .send-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .command-preview {
            margin-top: 12px;
            padding: 12px;
            background: var(--bg-primary);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-size: 12px;
