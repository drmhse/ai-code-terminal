        .file-preview-content .token.attr-value,
        .file-preview-content .token.keyword {
            color: var(--accent-blue);
        }

        .file-preview-content .token.function,
        .file-preview-content .token.class-name {
            color: var(--accent-orange);
        }

        .file-preview-content .token.regex,
        .file-preview-content .token.important,
        .file-preview-content .token.variable {
