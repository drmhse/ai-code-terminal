        /* Empty terminal state */
        .empty-terminal {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            color: var(--text-muted);
            gap: 12px;
        }

        .empty-terminal .icon.large {
            width: 48px;
            height: 48px;
        }

        /* Mobile Input Overlay Styles */
        .mobile-input-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(4px);
            z-index: 2000;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

        .mobile-input-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        .mobile-input-panel {
            width: 95%;
            max-width: 600px;
            max-height: 90vh;
            background: var(--bg-secondary);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            overflow-y: auto;
            transform: translateY(30px);
            transition: transform 0.3s ease;
