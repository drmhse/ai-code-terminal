        .file-preview-content .token.property,
        .file-preview-content .token.tag,
        .file-preview-content .token.boolean,
        .file-preview-content .token.number,
        .file-preview-content .token.constant,
        .file-preview-content .token.symbol,
        .file-preview-content .token.deleted {
            color: var(--accent-red);
        }

        .file-preview-content .token.selector,
        .file-preview-content .token.attr-name,
        .file-preview-content .token.string,
        .file-preview-content .token.char,
        .file-preview-content .token.builtin,
        .file-preview-content .token.inserted {
