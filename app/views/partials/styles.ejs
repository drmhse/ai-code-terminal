            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: center;
        }

        .message-content h4 {
            margin: 0;
            color: var(--text-primary);
            font-size: 16px;
        }

        .message-content p {
            margin: 0;
            color: var(--text-secondary);
            font-size: 14px;
        }

        .binary-message {
            color: var(--text-secondary);
        }

        .large-file-message {
            color: var(--accent-orange);
        }

        .file-path {
            font-family: 'JetBrains Mono', 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
            font-size: 11px;
            color: var(--text-muted);
            background: var(--bg-tertiary);
            padding: 4px 8px;
            border-radius: 4px;
